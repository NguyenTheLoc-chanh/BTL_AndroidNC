<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#358a39"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imgNextLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left_arrow"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <!-- Tab điều hướng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tabClassify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Phân loại rác"
            android:textColor="#358a39"
            android:textStyle="bold"
            android:padding="12dp"  android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tabGift"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đổi quà"
            android:textColor="#358a39"
            android:padding="12dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Container cho Fragment -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
