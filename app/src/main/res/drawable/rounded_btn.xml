<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền ngoài có bo góc -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@android:color/black"/> <!-- Viền màu đen -->
            <corners android:radius="12dp"/> <!-- Bo góc 12dp -->
        </shape>
    </item>

    <!-- Nền trong suốt giữ nguyên màu gốc -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Không đổi màu nền -->
            <corners android:radius="12dp"/> <!-- Bo góc khớp với viền -->
        </shape>
    </item>

</layer-list>
